<form class="form" action="/author" method="post">
	<div class="form-group">
		<label for="name">Name</label><br>
		<input type="text" name="name" id="name" placeholder="Add Author's Name"value=""required>
	</div>
	<div class="form-group">
		<label for="portrait">Portrait URL</label><br>
		<input type="text" name="portrait" id="portrait" placeholder="Portrait URL"value=""required>
	</div>
	<div class="form-group">
		<label for="bio">Bio</label><br>
		<textarea name="bio" id='bio' rows="8" cols="80" 	placeholder="Author Bio goes here"></textarea>
	</div>
	<button type="submit" class="btn btn-primary">Add a New Author!</button>
</form>
